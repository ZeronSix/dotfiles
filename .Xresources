Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

URxvt.font: xft:Source Code Pro:size=13
URxvt.scrollBar: false
URxvt.letterSpace: -2

! Set terminal padding
URxvt.internalBorder: 15
! Terminal window size
URxvt*geometry: 100x28

! Enables copy/paste with Ctrl-Shift-C/V
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.perl-ext-common: default,clipboard,tabbed
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.tabbed.tab-bg: 12
URxvt.tabbed.tabbar-bg: 12
URxvt.tabbed.tabbar-fg: 0

! Base16 Harmonic16 Light
! Scheme: Jannik Siebert (https://github.com/janniks)

#define base00 #f7f9fb
#define base01 #e5ebf1
#define base02 #cbd6e2
#define base03 #aabcce
#define base04 #627e99
#define base05 #405c79
#define base06 #223b54
#define base07 #0b1c2c
#define base08 #bf8b56
#define base09 #bfbf56
#define base0A #8bbf56
#define base0B #56bf8b
#define base0C #568bbf
#define base0D #8b56bf
#define base0E #bf568b
#define base0F #bf5656

*.foreground:   base05
#ifdef background_opacity
*.background:   [background_opacity]base00
#else
*.background:   base00
#endif
*.cursorColor:  base05

*.color0:       base00
*.color1:       base08
*.color2:       base0B
